{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "dialog:allow-save",
    "dialog:allow-open",
    "fs:allow-write-text-file",
    "fs:allow-read-text-file",
    "fs:allow-read-file",
    "fs:allow-exists",
    "fs:scope-download",
    "shell:allow-execute",
    "shell:allow-open",
    "fs:allow-watch",
    "fs:allow-mkdir",
    "fs:scope-appdata-recursive"
  ]
}
